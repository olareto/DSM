@model DSM5.Models.Comentario

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid bg-2 text-center">
    <h2 class="margin">Borrar Comentario</h2>

    <div class="container">
        <h3 class="admin">¿Esta seguro de que desea borrar el comentario?</h3>
        <hr />
        <div class="row">
            <div class="col-md-13 gerMargenLetras">
                <h4><strong>Autor: </strong>@Html.DisplayFor(model => model.autor)</h4>
                <h4><strong>Comentario: </strong>@Html.DisplayFor(model => model.comentario)</h4>
                <h4><strong>Fecha: </strong>@Html.DisplayFor(model => model.fecha)</h4>
                <hr />
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Borrar" class="btn btn-danger" />
                        <a class="btn btn-default" href='@Url.Action(@Session["action"] as string, @Session["controller"] as string, @Session["arg"], null)'>Cancelar</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>