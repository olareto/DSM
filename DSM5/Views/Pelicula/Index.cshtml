@model IEnumerable<DSM5.Models.Pelicula>

@{
    ViewBag.Title = "Películas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container-fluid bg-2 text-center">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h2 class="margin">Películas</h2>
            <p>
                <a class="btn btn-default center-block" href='@Url.Action("Filtrar", "Pelicula")'><span class="glyphicon glyphicon-search"></span>Busqueda</a>
            </p>
            @if (Session["admin"] != null && (bool)Session["admin"] == true)
            {
                <a class="admin btn btn-danger" href='@Url.Action("Create", "Pelicula", new { id = @Session["id_serie"] })'>Añadir película</a>
            }
        </div>
        <div class="col-md-3">
        </div>
    </div>      
    

    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <div class="col">
                <h3>@Html.DisplayFor(modelItem => item.Nombre)</h3>
            </div>
            <div class="col">
                <p>Valoración: @Html.DisplayFor(modelItem => item.Valoracion)</p>
            </div>
            <div class="col">
                <a href='@Url.Action("Details", "Pelicula", new { id = item.id })'>
                    <!--Ruta simple: sw8.jpg-->
                    <img class="cartelera polaroid" src='~/Images/cartelera/@Html.DisplayFor(modelItem => item.Imagen)' />
                </a>
            </div>
        </div>
    }

</div>
