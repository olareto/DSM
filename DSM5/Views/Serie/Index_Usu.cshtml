@model IEnumerable<DSM5.Models.Serie>

@{
    ViewBag.Title = "Index_Usu";
}

<h2>SERIES</h2>


<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Theme Made By www.w3schools.com - No Copyright -->
    <title>Home</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

</head>
<body>
    @foreach (var item in Model)
    {
        <div class="row">
            
            <div class="col-md-4">
                <div class="thumbnail">
                    <a href='@Url.Action("Details", "Serie", new { id = item.id })'>
                        <img src= @Html.DisplayFor(modelItem => item.Imagen) alt="Lights" style="width:100%">

                        <div class="caption">
                            <p>@Html.DisplayFor(modelItem => item.Nombre)</p>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    }



</body>
</html>
