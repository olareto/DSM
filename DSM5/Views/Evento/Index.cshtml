@model IEnumerable<DSM5.Models.Evento>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


   <div class="container-fluid bg-2G">
       <h2 class="margin colorTituloProductos text-center">Eventos</h2>
       @if (Session["admin"] != null && (bool)Session["admin"] == true)
       {
        <p class="admin text-center">
            @Html.ActionLink("Añadir Evento", "Create")
        </p>
       }
       
       <p class="text-center">
           <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-search"></span>@Html.ActionLink("Busqueda", "Filtrar")</button>         
       </p>

        @foreach (var item in Model)
        {
            <div class="panel">
                <div class="panel-heading text-center">
                    @Html.DisplayFor(modelItem => item.Nombre)
                </div>
                <div class="panel-body bg-2">  
                    <div class="row">
                        <div class="col-sm-4 text-justify">
                            <div>
                                <a href='@Url.Action("Details", "Evento", new { id = item.id })'>
                                    <img class="centrarResponsive img-responsive imagenesDetailsProductos" src="~/Images/Eventos/@Html.DisplayFor(model => item.Imagen)" />

                                </a>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div>
                                <p>
                                    @Html.DisplayFor(model => item.Descripcion)
                                </p>
                                <p>
                                    @Html.DisplayFor(model => item.Precio)
                                </p>
                                <p>
                                    @Html.DisplayFor(model => item.Valoracion)
                                </p>
                                
                            </div> 
                            <div>
                                <p>
                                    <button type="button" class="btn btn-mostaza">@Html.ActionLink("Añadir al carrito", "addcarr", "Usuario", new { idus = @Session["correo"] as string, idpro = item.id }, null)</button>
                                    <button type="button" class="btn ">@Html.ActionLink("Detalles", "Details", new { id = item.id })</button>
                                </p>
                            </div>
                        </div>
                        <div class="col-sm-4">

                        </div>
                    </div>                               
                </div>
            </div>
         

