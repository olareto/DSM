@model DSM5.Models.FiltroEvento

@{
    ViewBag.Title = "Filtrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid  text-center bg-2">
    <h2 class="margin colorTituloProductos">Búsqueda de serie</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <div class="col-md-3"></div>
                <p class="col-md-1">Nombre</p>
                <div class="checkbox col-md-1">
                    @Html.EditorFor(model => model.Nombrebol)
                    @Html.ValidationMessageFor(model => model.Nombrebol, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-3"></div>
                <p class="col-md-1">Precio mínimo</p>

                <div class="checkbox col-md-1">
                    @Html.EditorFor(model => model.Preciobol)
                    @Html.ValidationMessageFor(model => model.Preciobol, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.Preciomin, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Preciomin, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3"></div>
                <p class="col-md-1">Precio máximo</p>

                <div class="col-md-1"></div>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.Preciomax, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Preciomax, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-3"></div>
                <p class="col-md-1">Valoración</p>
                <div class="checkbox col-md-1">
                    @Html.EditorFor(model => model.Valoracionbol)
                    @Html.ValidationMessageFor(model => model.Valoracionbol, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.Valoracion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Valoracion, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3"></div>
                <p class="col-md-1">Talla</p>
                <div class="checkbox col-md-1">
                    @Html.EditorFor(model => model.Tipobol)
                    @Html.ValidationMessageFor(model => model.Tipo, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.Tipo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Tipo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-5 col-md-10">
                    <input type="submit" value="Buscar" class="btn btn-default btn-block" />
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
