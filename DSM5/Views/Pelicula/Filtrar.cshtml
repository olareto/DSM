@model DSM5.Models.FiltroPelicula

@{
    ViewBag.Title = "Buscar película";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid  text-center bg-2">
    <h2 class="margin colorTituloProductos">Búsqueda de película</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <div class="col-md-3"></div>
                <p class="col-md-1">Nombre</p>
                <div class="checkbox col-md-1">
                    @Html.EditorFor(model => model.Nombrebol)
                    @Html.ValidationMessageFor(model => model.Nombrebol, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-3"></div>
                <p class="col-md-1">Valoración</p>
                <div class="checkbox col-md-1">
                    @Html.EditorFor(model => model.Valoracionbol)
                    @Html.ValidationMessageFor(model => model.Valoracionbol, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.Valoracion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Valoracion, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-3"></div>
                <p class="col-md-1">Desde (Año)</p>
                
                <div class="checkbox col-md-1">
                    @Html.EditorFor(model => model.anyobol)
                    @Html.ValidationMessageFor(model => model.anyobol, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.anyomin, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.anyomin, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-3"></div>
                <p class="col-md-1">Hasta (Año)</p>
                
                <div class="col-md-1"></div>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.anyomax, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.anyomax, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-5 col-md-10">
                    <input type="submit" value="Buscar" class="btn btn-default btn-block" />
                </div>
            </div>
        </div>
    }

</div>
