@model IEnumerable<DSM5.Models.Serie>

@{
    ViewBag.Title = "Index_Usu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid bg-2 text-center">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h2 class="margin">Series</h2>
            <p>
                <a class="btn btn-default center-block" href='@Url.Action("Filtrar", "Serie")'><span class="glyphicon glyphicon-search"></span>Busqueda</a>
            </p>
            @if (Session["admin"] != null && (bool)Session["admin"] == true)
            {
                <a class="admin btn btn-danger" href='@Url.Action("Create", "Serie", new { id = @Session["id_serie"] })'>Añadir serie</a>
            }

        </div>
        <div class="col-md-3">
            
        </div>
    </div> 

    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <div class="col">
                <h3>@Html.DisplayFor(modelItem => item.Nombre)</h3>
            </div>
            <div class="col">
                <p>Valoración: @Html.DisplayFor(modelItem => item.Valoracion)</p>
            </div>
            <div class="col">
                <a href='@Url.Action("Details", "Serie", new { id = item.id })'>
                    <!--Ruta simple: sw8.jpg-->
                    <img class="cartelera" src='~/Images/cartelera/@Html.DisplayFor(modelItem => item.Imagen)' />
                </a>
            </div>
        </div>
    }
    
</div>
