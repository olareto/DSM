<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - COKE & POPCORNS</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        p, a, h2, h3{
            font-family: 'Vintage Avalanche';
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("COKE&POPCORNS", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <!--HTML, MetodoControlador, NombreControlador-->
                    <li>@Html.ActionLink("Series", "Index_Usu", "Serie")</li>
                    <li>@Html.ActionLink("Peliculas", "Index", "Pelicula")</li>
                    <li>@Html.ActionLink("Productos", "Index", "Producto")</li>
                    <li>@Html.ActionLink("Eventos", "Index", "Evento")</li>
                    <li>

                        <a href='@Url.Action("Index", "Carrito")'>
                            <span class="glyphicon glyphicon-shopping-cart"> </span>
                        </a>

                    </li>
                    <li>
                        <a href='@Url.Action("Index", "Usuario")'>
                            <span class="glyphicon glyphicon-user"> </span>
                        </a>
                    </li>

                    <li>
                        <a href='@Url.Action("Index", "Buscar")'>
                            <span class="glyphicon glyphicon-search"> </span>
                        </a>
                    </li>

                </ul>
            </div>
        </div>
    </div>
    <div>
        @RenderBody()
        <hr />
        <footer class="text-center">
            <p>&copy; @DateTime.Now.Year - COKE & POPCORNS</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
