@model DSM5.Models.Evento

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid bg-2">
    <div class="row">
        <div class="col-sm-4 text-center">
            <h2>@Html.DisplayFor(model => model.Nombre)</h2>
            <img class="centrarResponsive img-responsive imagenesDetailsProductos bg-black2" src="~/Images/Eventos/@Html.DisplayFor(model => model.Imagen)" />
        </div>
        <div class="col-sm-3">
            <p>
                <h4>
                    @Html.DisplayNameFor(model => model.Tipo): @Html.DisplayFor(model => model.Tipo)
                </h4>    
            </p>


            <p>
                <h4>
                    @Html.DisplayNameFor(model => model.Stock): @Html.DisplayFor(model => model.Stock)
                </h4>  
            </p>


            <p>
                <h4>
                    @Html.DisplayNameFor(model => model.Precio): @Html.DisplayFor(model => model.Precio)
                </h4>  
            </p>


            <p>
                <h4>
                    @Html.DisplayNameFor(model => model.Valoracion): @Html.DisplayFor(model => model.Valoracion)
                </h4>  
            </p>


            <p>
                <a class="btn btn-default" href='@Url.Action(@Session["action"] as string, @Session["controller"] as string, @Session["arg"], null)'>Volver</a>

                <a class="btn btn-mostaza ne" href='@Url.Action("addcarr", "Usuario", new { idus = @Session["correo"] as string, idpro = Model.id }, null)'>Añadir al carrito</a>

                @if (Session["admin"] != null && (bool)Session["admin"] == true)
    {
            <a class="admin btn btn-danger" href='@Url.Action("Edit", new { id = Model.id })'>Editar</a>
            <a class="admin btn btn-danger" href='@Url.Action("Delete", new { id = Model.id })'>Borrar</a>
}

            </p>
        </div>
        <div class="col-sm-5">
            <p>
                <h4>
                    Descripcion: 
                </h4> 
            </p>
            <p>
                <h4>
                  @Html.DisplayFor(model => model.descriplarga)
                </h4>
            </p>
        </div>
    </div>

    @if (Session["log"] != null && (bool)Session["log"] == true)
    {
        <p>
            
            <a class="btn btn-default" href='@Html.Partial("_Comentario", (IEnumerable<DSM5.Models.Comentario>)ViewBag.coment)'>Comentar</a>

        </p>
    }

</div>

