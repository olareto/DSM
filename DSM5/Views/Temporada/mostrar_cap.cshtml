@model IEnumerable<DSM5.Models.Capitulo>

@{
    ViewBag.Title = "Capitulos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="table">
        <hr />
        @foreach (var item in Model)
        {
            <div class="row shadow">
                <div class="col-md-4">
                    <img src="~/Images/capitulos/@Html.DisplayFor(modelItem => item.imagen)" />
                </div>
                <div class="col-md-2 margenDescripcionesEventos">
                    <p>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </p>
                    <p>
                        @Html.DisplayFor(modelItem => item.fecha)
                    </p>
                </div>
                <div class="col-md-5 margenDescripcionesEventos">
                    @Html.DisplayFor(modelItem => item.descripcion)
                </div>
                <div class="col-md-1 margenDescripcionesEventos">
                    @Html.ActionLink("Edit", "Edit", "Capitulo", new { id = item.id }, null)
                    @Html.ActionLink("Reproducir", "Reproducir", "Capitulo", new { id = item.id }, null)
                    @Html.ActionLink("Delete", "Delete", "Capitulo", new { id = item.id }, null)
                </div>
            </div>
            <hr />
        }

    </div>

    @if (Session["admin"] != null && (bool)Session["admin"] == true)
    {
        <p class="admin btn btn-default">
            @Html.ActionLink("Añadir capitulo", "Create", "Capitulo", new { id = @Session["id_serie"] }, null)
        </p>
    }

            <a class="btn btn-default" href='@Url.Action("Details", "Serie", new { id = @Session["id_serie"] })'><span class="glyphicon glyphicon-search"></span>Volver</a>


    </div>