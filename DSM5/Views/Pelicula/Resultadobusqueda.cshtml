@model IEnumerable<DSM5.Models.Pelicula>

@{
    ViewBag.Title = "Resultadobusqueda";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid bg-2">
    <div class="container">
        <h2 class="text-center">Resultado búsqueda</h2>
        <table class="table table-bordered table-responsive">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Genero</th>
                    <th>Fecha</th>
                    <th>Valoración</th>
                    <th></th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tbody>
                    <tr>
                        <td>
                            <a class="imagenesCarrito" href='@Url.Action("Detalles", "Details", new { id = item.id })'>
                                <img class="imagenesCarrito" src='~/Images/cartelera/@Html.DisplayFor(modelItem => item.Imagen)' />
                            </a>

                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.genero)</td>
                        <td>@Html.DisplayFor(modelItem => item.fecha)</td>
                        <td>@Html.DisplayFor(modelItem => item.Valoracion)</td>
                        <td>

                            <button type="button" class="btn btn-default">@Html.ActionLink("Detalles", "Details", new { id = item.id })</button>
                        </td>
                    </tr>
                </tbody>
            }
        </table>
    </div>

</div>